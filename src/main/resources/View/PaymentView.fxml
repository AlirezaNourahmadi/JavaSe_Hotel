<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel.controller.PaymentController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Receipt ID:" />
                        <TextField fx:id="receiptIdText" />
                        <Label text="Amount:" />
                        <TextField fx:id="amountText" />
                        <Label text="Date:" />
                        <DatePicker fx:id="datePicker" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Status:" />
                        <TextField fx:id="statusText" />
                        <Label text="Payment Type:" />
                        <TextField fx:id="paymentTypeText" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" text="Save" />
                        <Button fx:id="editButton" text="Edit" />
                        <Button fx:id="deleteButton" text="Delete" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Search by Amount:" />
                        <TextField fx:id="findByAmountText" />
                        <Label text="Search by ID:" />
                        <TextField fx:id="findByIdText" />
                    </children>
                </HBox>
                <TableView fx:id="paymentTable">
                    <columns>
                        <TableColumn fx:id="receiptIdColumn" text="Receipt ID" />
                        <TableColumn fx:id="amountColumn" text="Amount" />
                        <TableColumn fx:id="dateColumn" text="Date" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                        <TableColumn fx:id="paymentTypeColumn" text="Payment Type" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>