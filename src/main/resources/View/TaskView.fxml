<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel.controller.TaskController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Task ID:" />
                        <TextField fx:id="taskIdText" />
                        <Label text="Description:" />
                        <TextField fx:id="descriptionText" />
                        <Label text="Due Date:" />
                        <DatePicker fx:id="dueDatePicker" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Assigned Employee ID:" />
                        <TextField fx:id="assignedEmployeeIdText" />
                        <Label text="Status:" />
                        <TextField fx:id="statusText" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" text="Save" />
                        <Button fx:id="editButton" text="Edit" />
                        <Button fx:id="deleteButton" text="Delete" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Search by Description:" />
                        <TextField fx:id="findByDescriptionText" />
                        <Label text="Search by ID:" />
                        <TextField fx:id="findByIdText" />
                    </children>
                </HBox>
                <TableView fx:id="taskTable">
                    <columns>
                        <TableColumn fx:id="taskIdColumn" text="Task ID" />
                        <TableColumn fx:id="descriptionColumn" text="Description" />
                        <TableColumn fx:id="dueDateColumn" text="Due Date" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>